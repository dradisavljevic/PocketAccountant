{
  "name": "PocketAccountant",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "test": "jest",
    "tsc": "tsc",
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "iphone8": "react-native run-ios --simulator=\"iPhone 8\"",
    "build:android:debug": "cd ./android && ./gradlew app:assembleDebug && ./gradlew installDebug && adb reverse tcp:8081 tcp:8081",
    "prettify": "lint-staged",
    "clean": "rm -rf node_modules/ && npm install",
    "remove-haste": "rm -rf /tmp/hast-map-react-native-packager-*",
    "droid-reverse-port": "adb reverse tcp:9090 tcp:9090"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index --again"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "prettier": "^1.19.1",
    "react": "16.9.0",
    "react-native": "0.61.5",
    "react-native-gesture-handler": "^1.6.0",
    "react-native-screens": "^2.0.0",
    "react-native-text-input-mask": "^2.0.0",
    "react-native-vector-icons": "^6.6.0",
    "react-navigation": "^4.2.1",
    "react-navigation-stack": "^1.10.3"
  },
  "devDependencies": {
    "@babel/core": "^7.6.2",
    "@babel/runtime": "^7.6.2",
    "@react-native-community/eslint-config": "^0.0.5",
    "@types/jest": "^24.0.24",
    "@types/react-native": "^0.60.25",
    "@types/react-native-vector-icons": "^6.4.5",
    "@types/react-test-renderer": "16.9.1",
    "@typescript-eslint/eslint-plugin": "^2.12.0",
    "@typescript-eslint/parser": "^2.12.0",
    "babel-jest": "^24.9.0",
    "eslint": "^6.5.1",
    "husky": "^4.2.3",
    "jest": "^24.9.0",
    "lint-staged": "^10.0.8",
    "metro-react-native-babel-preset": "^0.56.0",
    "react-test-renderer": "16.9.0",
    "tslint": "^6.0.0",
    "typescript": "^3.7.3"
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
